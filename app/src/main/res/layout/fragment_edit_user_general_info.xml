<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EditUserFragment"
    android:orientation="vertical"
    android:gravity="center"

    >

    <ScrollView

        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"

        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/edit_user_fragment_goToSettings_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/choose_gender_arrow_back"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/please_edit_your_info_and_press_save"
                android:textColor="@color/brown"
                android:layout_marginEnd="10dp"
                android:textAlignment="center"
                android:fontFamily="@font/dubai_medium"
                android:gravity="center"
                android:textSize="13sp"/>
        </LinearLayout>



        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/edit_user_general_info_edittext_rect"
            >
            <EditText
                android:id="@+id/edit_user_fragment_name_EditTExt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:background="@null"
                android:textColorHint="@color/brown"
                android:fontFamily="@font/dubai_light"
                android:hint="@string/name"
                android:textColor="@color/brown"
                android:textAlignment="center"
                android:inputType="textPersonName"/>
        </RelativeLayout>
        <Spinner
            android:id="@+id/edit_user_fragment_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_spinner_style"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:popupBackground="@color/almostGrey"
            />

        <RelativeLayout
            android:id="@+id/edit_user_fragment_anotherHelp_RLayout"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/edit_user_general_info_edittext_rect"
            android:visibility="gone"

            >
            <EditText
                android:id="@+id/edit_user_fragment_anotherHelp_EditTExt"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:textColorHint="@color/brown"
                android:fontFamily="@font/dubai_light"
                android:textColor="@color/brown"
                android:hint="@string/another_way_to_help"

                android:textAlignment="center"

                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <RelativeLayout
                android:id="@+id/edit_user_fragment_save_button_RLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/user_profile_log_out_button_rect"
                >
                <TextView
                    android:paddingBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/brown"
                    android:textSize="25sp"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/dubai_medium"
                    android:text="@string/save"/>
            </RelativeLayout>
        </LinearLayout>




    </LinearLayout>

    </ScrollView>


</LinearLayout>