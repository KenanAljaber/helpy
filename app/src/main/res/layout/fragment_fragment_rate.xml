<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentRate">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/note_you_can_only_rate_a_person_if_he_accepted_your_request"
            android:fontFamily="@font/dubai_medium"
            android:textColor="@color/almostGrey"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
           >
            <RelativeLayout
                android:id="@+id/rate_fragment_thumbsUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/rate_fragment_thumbs_up"
                android:layout_marginStart="54dp"/>
            <RelativeLayout
                android:id="@+id/rate_fragment_thumbsDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rate_fragment_thumbs_down"
                android:layout_marginTop="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="54dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Helped me"
                android:textColor="@color/almostGrey"
                android:fontFamily="@font/dubai_medium"
                android:layout_marginTop="100dp"
                android:layout_marginStart="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Did not"
                android:layout_alignParentEnd="true"
                android:textColor="@color/almostGrey"
                android:fontFamily="@font/dubai_medium"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="90dp"/>



        </RelativeLayout>


        </LinearLayout>


</FrameLayout>